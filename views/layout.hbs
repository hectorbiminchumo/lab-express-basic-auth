

{{!-- ./views/layout.hbs --}}
<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<link rel="stylesheet" href="/stylesheets/style.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<title>Aplicación Autenticación</title>


</head>
<body>
	







<header class="p-3 bg-dark text-white">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
      
        
  {{#if currentUser}}
  
        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link px-2 text-white">Home</a></li>
          <li><a href="/users/profile" class="nav-link px-2 text-white">Profile</a></li>
       
        </ul>
         <form action="/auth/logout" method="POST"><button class="btn btn-outline-light me-2" >Logout</button></form>
      
        {{else}}
        <div class="text-end">
          
          <button type="button" class="btn btn-outline-light me-2" onclick="window.location.href='/'">Home</button>
          <button type="button" class="btn btn-outline-light me-2" onclick="window.location.href='/auth/login';">Login</button>
         <button type="button" class="btn btn-warning" onclick="window.location.href='/auth/signup';">Sign-up</button>
          {{/if}}
        </div>
      </div>
    </div>
  </header>



	{{{ body }}}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>